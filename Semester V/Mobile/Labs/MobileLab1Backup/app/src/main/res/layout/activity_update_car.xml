<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UpdateActivity">

    <EditText
        android:id="@+id/model_name_input2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Model Name"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp" />

    <EditText
        android:id="@+id/brand_input2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Brand"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/model_name_input2"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/year_input2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Year"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/brand_input2"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/price_input2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Price"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/year_input2"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/availability_input2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Availability Status"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/price_input2"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/update_car_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Update Car"
        android:background="#990606"
        app:layout_constraintTop_toBottomOf="@+id/availability_input2"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/delete_car_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delete Car"
        android:background="#4058C3"
        app:layout_constraintTop_toBottomOf="@+id/update_car_button"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
